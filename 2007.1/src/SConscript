Import('env')

sconscripts = []
if env['lite'] == 0:
	sconscripts  += [
		'engine/SConscript',
		'guimap_test/SConscript',
	]

if env['testcases'] == 1:
	sconscripts.append('unit_tests/SConscript')


if env['lite'] == 1:
	sconscripts = [
		'engine/SConscript'
	]

SConscript(sconscripts)
