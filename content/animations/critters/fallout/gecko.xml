<!--
    This is a example of the complex animation system.
    After parsing the file the complex animation has a set of
    partial_actions.
    When a new action is enqueued after the running partial action
    it is looked in its next_partial_action table to see, whether it shall
    be continued. If yes, that partial action is made active.
    If no continuation exists, the first (number="0") partial_action
    of the action is activated.
-->
<complex-animation name="gecko" geometry="1">
	<!-- Idle Action -->
	<action id="0" direction="255">
		<animation src="art/critters/nmwarraa.frm"/>
		<partial-action number="0">
			<frame-range first="0" last="8"/>
			<partial-action action="0" number="1" direction="255"/>
		</partial-action>
		
	</action>
	
	<!-- Walking Action -->
	<action id="1" direction="255">
		<animation src="art/critters/nmwarrab.frm"/>
		
		<partial-action number="0">
			<frame-range first="0" last="4"/>
			<warp factor="0"/>
			<partial-action action="1" number="1" direction="255"/>
		</partial-action>
		
		<partial-action number="1">
			<frame-range first="5" last="8"/>
			<warp factor="1"/>
			<partial-action action="1" number="0" direction="255"/>
		</partial-action>
	</action>
	
	<action id="2" direction="255">
		<animation src="art/critters/nmwarrat.frm"/>
		
		<partial-action number="0">
			<frame-range first="0" last="3"/>
			<warp factor="0"/>
			<partial-action action="2" number="1" direction="255"/>
		</partial-action>
		
		<partial-action number="1">
			<frame-range first="4" last="7"/>
			<warp factor="1"/>
			<partial-action action="2" number="0" direction="255"/>
		</partial-action>
	</action>
	
</complex-animation>