		</layer>

		<!-- OBJECT LAYER -->
		<layer id="TechdemoMapObjectLayer" grid_type="square" scaling="0.4">

			<metadata>
				<param name="_OVERLAY_IMAGE_OFFSET" type="Point"><x>5</x><y>0</y></param>
			</metadata>

			<instances>
				<i o="WildBarracuda:Bar" x="4" y="1" />
