<?xml version="1.0"?>
<map id="TechdemoMap" format="1.0">

	<metadata>
		<param type="text" name="Name">city1.xml</param>
		<param type="id" name="Version">1</param>
		<param type="text" name="Comment">Official FIFE 2007.2 techdemo map. Some demonstration and some fun for modders, not more, not less :-)</param>
		<param type="text" name="Author">chewie</param>
		<param type="id" name="_START_ELEVATION">1</param>
	</metadata>

	<!-- Load tile object datasets -->
	<!-- street & city underground -->
	<dataset type="XML" source="techdemo/datasets/tiles/metal.xml" />
	<dataset type="XML" source="techdemo/datasets/tiles/asphalt.xml" />
	<dataset type="XML" source="techdemo/datasets/tiles/enviroment.xml" />

	<!-- Load object datasets -->
	<!-- test.xml -->
	<dataset type="XML" source="techdemo/datasets/objects/test.xml" />
	
	<!-- Map specific object -->

