<Window title="This is the PyChan demo application.">
	<VBox  base_color="255,0,0" border_size="2">
		<HBox  base_color="255,0,0" border_size="2">
			<ScrollArea size="200,500">
				<ListBox name="demoList" min_size="100,100" />
			</ScrollArea>
			<VBox  base_color="255,0,0" border_size="2">
				<Label text="XML code"  base_color="255,0,0" border_size="2"/>
				<ScrollArea size="600,200">
					<TextBox filename="content/gui/all_widgets.xml"/>
				</ScrollArea>
				<Spacer />
				<Label text="I am working on spacers, so you see lotsa red lines."  base_color="255,0,0" border_size="2"/>
			</VBox>
		</HBox>
		<HBox base_color="255,0,0" border_size="2">
			<ClickLabel text="Credits"  base_color="255,0,0" border_size="2"/>
			<Spacer />
			<Button name="closeButton" text="Quit."  base_color="255,0,0" border_size="2"/>
		</HBox>
	</VBox>
</Window>