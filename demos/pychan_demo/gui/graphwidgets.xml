<Window title="Graph Widgets Example" min_size="200, 250">
	<Container min_size="200, 200" border_size="0">
		<LineGraph min_size="200, 200" size="200, 200" thickness="4" line_color="255,0,0" coordinates="10,10, 20,50, 30,10, 40,50, 50,100, 60,190, 150,10"/>
		<CurveGraph min_size="200, 200" size="200, 200" controll_points="False" thickness="4" curve_color="0,0,255" coordinates="10,10, 20,50, 30,10, 40,50, 50,100, 60,190, 150,10"/>
		<CurveGraph min_size="200, 200" size="200, 200" thickness="4" curve_color="255,0,255" coordinates="10,10, 20,50, 30,10, 40,50, 50,100, 60,190, 150,10"/>
		<PointGraph min_size="200, 200" size="200, 200" thickness="4" point_color="0,255,0" coordinates="10,10, 20,50, 30,10, 40,50, 50,100, 60,190, 150,10"/>
	</Container>
	<Button name="closeButton" text="Close"/>
</Window>
