<?xml version="1.0"?>
<map id="TechdemoMap" format="1.0">

	<metadata>
		<param name="Name" value="city_new.xml" />
		<param name="Version" value="1" />
		<param name="Comment" value="Upcoming 2007.3 techdemo map." />
		<param name="Author" value="Zero-Projekt and FIFE team" />
	</metadata>

	<!-- Load tiles -->
	<dataset type="XML" source="fo_remake/datasets/tiles/test_tiles.xml" />

	<!-- Load objects -->
	<dataset type="XML" source="fo_remake/datasets/objects/test_objects.xml" />

	<!-- Load agent datasets -->
	<dataset type="XML" source="fo_remake/datasets/agents/humans/gunner.xml" />

	<elevation id="TechdemoMapElevation">
		<!-- TILE LAYER -->
		<layer id="TechdemoMapTileLayer" grid_type="square" x_scale="1" y_scale="1">
			<instances>
				<i o="Tiles:Test:Block" x="0" y="0" /><i o="Tiles:Test:Block" /><i o="Tiles:Test:Block" /><i o="Tiles:Test:Block" /><i o="Tiles:Test:Block" />
				<i o="Tiles:Test:Block" x="0" y="1" /><i o="Tiles:Test:Block" /><i o="Tiles:Test:Block" /><i o="Tiles:Test:Block" /><i o="Tiles:Test:Block" />
				<i o="Tiles:Test:Block" x="0" y="2" /><i o="Tiles:Test:Block" /><i o="Tiles:Test:Block" /><i o="Tiles:Test:Block" /><i o="Tiles:Test:Block" />
				<i o="Tiles:Test:Block" x="0" y="3" /><i o="Tiles:Test:Block" /><i o="Tiles:Test:Block" /><i o="Tiles:Test:Block" /><i o="Tiles:Test:Block" />
				<i o="Tiles:Test:Block" x="0" y="4" /><i o="Tiles:Test:Block" /><i o="Tiles:Test:Block" /><i o="Tiles:Test:Block" /><i o="Tiles:Test:Block" />
			</instances>		
		</layer>

		<!-- OBJECT LAYER -->
		<layer id="TechdemoMapObjectLayer" grid_type="hexagonal" x_offset="0" y_offset="0" x_scale="0.25" y_scale="0.25" rotation="0">
			<instances>
				<i o="PC" x="0" y="0" id="agent">
					<metadata>
						<param name="name" value="MyHero"/>
						<param name="story">
							Here is some text representing the story behind our hero.
							...and still some more text.
						</param>
					</metadata>
				</i>
				<i o="Object:Invisible" x="22" y="20" />
				<i o="Object:Invisible" x="22" y="21" />
				<i o="Object:Invisible" x="23" y="22" />
				<i o="Object:Invisible" x="23" y="23" />

				<i o="Object:Invisible" x="23" y="20" />
				<i o="Object:Invisible" x="23" y="21" />
				<i o="Object:Invisible" x="24" y="22" />
				<i o="Object:Invisible" x="24" y="23" />

				<i o="Object:Invisible" x="23" y="19" />
				<i o="Object:Invisible" x="24" y="20" />
				<i o="Object:Invisible" x="24" y="21" />
				<i o="Object:Invisible" x="25" y="22" />

				<i o="Object:Invisible" x="24" y="19" />
				<i o="Object:Invisible" x="25" y="20" />
				<i o="Object:Invisible" x="25" y="21" />
				<i o="Object:Invisible" x="26" y="22" />

				<i o="Object:Invisible" x="25" y="18" />
				<i o="Object:Invisible" x="25" y="19" />
				<i o="Object:Invisible" x="26" y="20" />
				<i o="Object:Invisible" x="26" y="21" />			
			</instances>
		</layer>
	</elevation>
</map>
